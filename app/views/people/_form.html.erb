<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight, :placeholder => "in pounds - ie: 150" %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.number_field :height, :placeholder => "in inches - ie: 54" %>
    <!-- set value of gender to not male or female in case user never verifies the guess. -->
    <%= f.hidden_field(:gender, value: 2) %>
  </div>
  <div class="actions">
    <%= f.submit "Guess My Gender" %>
  </div>
<% end %>
